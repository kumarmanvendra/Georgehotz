FROM ubuntu:20.04

RUN apt-get update && \
    apt-get install -y --no-install-recommends clang g++ ocl-icd-opencl-dev python3.8 python3-pip python3-dev  && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

ADD . /app

RUN pip install -e '.[testing]' --extra-index-url https://download.pytorch.org/whl/cpu
