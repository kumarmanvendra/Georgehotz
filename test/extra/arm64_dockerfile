FROM arm64v8/python:3.8-slim-buster

WORKDIR /app

RUN apt-get update && \
    apt-get install -y git clang ocl-icd-opencl-dev ocl-icd-libopencl1 opencl-headers pocl-opencl-icd  && \
    rm -rf /var/lib/apt/lists/*

RUN git clone https://github.com/tinygrad/tinygrad.git

WORKDIR /app/tinygrad

RUN pip install -e '.[testing]' --extra-index-url https://download.pytorch.org/whl/cpu
